<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/bootstrap.js"></script>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/themes/bootstrap-theme.css" rel="stylesheet" />
        <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    </head>
<body style="background-color:beige;" >
    <header >
        <div class="content-wrapper container">
            <div class="row">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Atlantis Bookstore", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Store", "Index", "Home")</li>
                            <li style="color:grey"> | </li>
                            @*<li>@Html.ActionLink("Store", "Index", "Store")</li>
                            <li style="color:grey"> | </li>*@
                            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                            <li style="color:grey"> | </li>
                            <li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="body" style="background-color:azure">
        <section class="content-wrapper main-content clear-fix">
            <div class="col-md-3">
                <div class="container">
                    <div class="row">
                        <u>Browse by Genre:</u>
                    </div>
                    <div class="row">
                        @{Html.RenderAction("GenreMenu", "Store");}
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
